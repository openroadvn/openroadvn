function isa_asset_assistant_get_qid_by_description($description)
{
  $descriptions = isa_assets_assistant_get_full_description();
  foreach ($descriptions as $key=>$value) {
    foreach ($value as  $desc) {
      if ($desc['label'] == $description)
        return  $key;
    }
    return FALSE;
  }
}

